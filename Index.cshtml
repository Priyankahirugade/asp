@model IEnumerable<CodeFirst.Models.Product>

@{
    ViewData["Title"] = "Index";
    
    

}


<p>
    @Html.ActionLink("Create Product", "Create", null, new {@class = "btn btn-primary"})
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.First(). ProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Qty)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Remarks)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ProductName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Qty)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Remarks)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ProductID }, new {@class = "btn btn-primary"}) 
            @Html.ActionLink("Details", "Details", new { id=item.ProductID }, new { @class = "btn btn-success"}) 
            @Html.ActionLink("Delete", "Delete", new { id=item.ProductID }, new { @class = "btn btn-danager"})
        </td>
    </tr>
}

</table>
